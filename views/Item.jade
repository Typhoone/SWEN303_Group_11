extends layout

block content
    include toolbar.html

    head
        link(href='/stylesheets/item.css', rel='stylesheet')

    body
        .container
            .row.top
                .col-md-3
                .col-md-6
                    h1 #{name}
                .col-md-3
            .row.middle
                .col-md-9.left
                    img(src='images/#{image}.jpg', alt='#{name}', class="img-thumbnail")

                .col-md-3.right

                    hr
                    h3 Price: &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 9.99
                    br
                    h3 Available: &nbsp; &nbsp; &nbsp; &nbsp;  3
                    ul.list-inline
                        li
                            p Quantity
                        li
                            select.form-control
                                option(value='one') 1
                                option(value='two') 2
                                option(value='three') 3
                                option(value='four') 4
                                option(value='five') 5
                    button.btn.btn-primary(type='button') Buy it now

                    button.btn.btn-default(type='button') Add to Cart
                    button.btn.btn-success(type='button') Add to Watchlist
                    hr
            .row.bottom
                .col-md-9

                    .description
                        h3 Description:
                        h4 #{description}
                        hr
