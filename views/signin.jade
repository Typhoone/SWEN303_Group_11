extends layout

block content
	include toolbar.html
	// Latest jquery
	script(src='https://code.jquery.com/jquery-2.2.3.min.js', integrity='sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=', crossorigin='anonymous')
	// Latest compiled and minified CSS
	link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
	// Optional theme
	link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css', integrity='sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r', crossorigin='anonymous')
	// Latest compiled and minified JavaScript
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')

	.col-xs-3
	.col-xs-6
		-if (true) {
			h1 #{title}
		-}
		-if (typeof(err) !== 'undefined'){
			.alert.alert-warning
				strong Error!
				| #{err}
		-}
			
		-if (typeof(result) !== 'undefined') {
			script var result = !{JSON.stringify(result)}
		-}
		
	
		form(action="/signInSubmit", method="post")
			.form-group
				label(for='email') Email address
				input#email.form-control(type='email', placeholder='Email' name="email")
			.form-group
				label(for='pass') Password
				input#pass.form-control(type='Password', placeholder='password' name="pass")
			button.btn.btn-default(type="submit", name="submitBtn") Submit
		.col-xs-3
				
